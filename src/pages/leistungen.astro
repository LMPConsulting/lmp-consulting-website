---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard';

const services = [
  {
    icon: (
      <svg className="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
    ),
    title: "IT-Beratung & Strategie",
    description: "Strategische Beratung für Ihre digitale Transformation. Von der Analyse bis zur Umsetzung begleiten wir Sie kompetent auf Ihrem Weg in die digitale Zukunft.",
    features: [
      "Digitalisierungsstrategie entwickeln",
      "IT-Architektur & Systemlandschaft",
      "Technologie-Assessment & Evaluation",
      "Vendor Selection & Procurement",
      "Cloud-Migration & Modernisierung",
      "Cybersecurity & Compliance"
    ],
    benefits: [
      "Reduzierte IT-Kosten um bis zu 30%",
      "Verbesserte Systemperformance",
      "Zukunftssichere IT-Infrastruktur",
      "Erhöhte Datensicherheit",
      "Skalierbare Lösungen"
    ],
    technologies: ["Cloud", "SAP", "Microsoft 365", "AWS", "Azure"],
    price: "ab 150€/h"
  },
  {
    icon: (
      <svg className="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
      </svg>
    ),
    title: "Projektleitung & Management",
    description: "Professionelles Projektmanagement nach bewährten Standards. Wir führen Ihre IT-Projekte termingerecht, budgetkonform und erfolgreich zum Ziel.",
    features: [
      "Agile Projektmethoden (Scrum, Kanban)",
      "Klassisches Projektmanagement (PRINCE2)",
      "Stakeholder & Risikomanagement",
      "Budget- & Ressourcenplanung",
      "Qualitätssicherung & Testing",
      "Go-Live Support & Rollout"
    ],
    benefits: [
      "98% Projekterfolgsrate",
      "Durchschnittlich 20% Zeitersparnis",
      "Transparente Kommunikation",
      "Risikominimierung",
      "Nachhaltige Ergebnisse"
    ],
    technologies: ["Jira", "Azure DevOps", "MS Project", "Confluence"],
    price: "ab 140€/h"
  },
  {
    icon: (
      <svg className="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    ),
    title: "Change Management",
    description: "Strukturierte Begleitung organisatorischer Veränderungen. Menschen und Prozesse erfolgreich transformieren und nachhaltig etablieren.",
    features: [
      "Change-Strategie & Roadmap",
      "Stakeholder-Analyse & Engagement",
      "Kommunikationskonzepte",
      "Training & Coaching Programme",
      "Kulturwandel & Transformation",
      "Erfolgsmessung & Monitoring"
    ],
    benefits: [
      "85% höhere Akzeptanzrate",
      "Reduzierte Widerstandskultur",
      "Nachhaltige Veränderung",
      "Motivierte Mitarbeiter",
      "Messbare Erfolge"
    ],
    technologies: ["Prosci", "Kotter", "ADKAR"],
    price: "ab 160€/h"
  }
];
---

<Layout 
  title="Leistungen - LMP Consulting GmbH" 
  description="IT-Beratung, Projektleitung und Change Management - Unsere umfassenden Dienstleistungen für Ihre digitale Transformation."
>
  <Header />
  <main class="pt-20 lg:pt-24">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-br from-primary-50 via-white to-accent-50 relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-96 h-96 bg-primary-100 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob"></div>
        <div class="absolute top-40 right-10 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-8 left-20 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-4000"></div>
      </div>

      <div class="container relative z-10">
        <div class="max-w-5xl mx-auto text-center">
          <h1 class="heading-1 mb-8">
            Unsere <span class="text-gradient">Leistungen</span>
          </h1>
          <p class="text-large mb-12 max-w-3xl mx-auto">
            Professionelle IT-Services für Ihre erfolgreiche digitale Transformation. 
            Mit über 15 Jahren Erfahrung und bewährten Methoden führen wir Sie sicher zum Ziel.
          </p>
          
          <!-- Trust Indicators -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">98% Erfolgsrate</h3>
              <p class="text-small text-secondary-600">bei unseren Projekten</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">20% Zeitersparnis</h3>
              <p class="text-small text-secondary-600">durch effiziente Methoden</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">30% Kostensenkung</h3>
              <p class="text-small text-secondary-600">durch optimierte Prozesse</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="section-compact bg-white">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {services.map((service, index) => (
            <ServiceCard 
              key={service.title}
              icon={service.icon}
              title={service.title}
              description={service.description}
              features={service.features}
              benefits={service.benefits}
              technologies={service.technologies}
              price={service.price}
              index={index}
              client:load
            />
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-compact bg-gradient-to-br from-primary-600 to-primary-800 text-white">
      <div class="container text-center">
        <h2 class="heading-2 mb-6 text-white">
          Bereit für Ihre digitale Transformation?
        </h2>
        <p class="text-large mb-8 text-white/90 max-w-3xl mx-auto">
          Lassen Sie uns in einem kostenlosen Beratungsgespräch Ihre Herausforderungen analysieren 
          und gemeinsam die optimale Lösung entwickeln.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/kontakt" class="btn bg-white text-primary hover:bg-secondary-100 shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Kostenlose Beratung starten
          </a>
          <a href="tel:+41441234567" class="btn border-2 border-white text-white hover:bg-white hover:text-primary shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Direkt anrufen
          </a>
          <a href="/projekte" class="btn-ghost border-2 border-white/30 text-white hover:bg-white/10 hover:border-white">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Referenzen ansehen
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>