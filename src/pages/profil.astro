---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const skills = [
  { name: "Projektmanagement", level: 95, category: "Management" },
  { name: "SAP Activate", level: 90, category: "Technical" },
  { name: "PRINCE2", level: 88, category: "Management" },
  { name: "Scrum/Agile", level: 92, category: "Management" },
  { name: "Change Management", level: 85, category: "Management" },
  { name: "RPA", level: 80, category: "Technical" },
  { name: "Python", level: 75, category: "Technical" },
  { name: "SQL", level: 78, category: "Technical" },
  { name: "Stakeholder Management", level: 93, category: "Management" },
  { name: "IT Governance", level: 82, category: "Management" }
];

const certifications = [
  { name: "PRINCE2 Practitioner", issuer: "AXELOS", year: "2022" },
  { name: "Scrum Master", issuer: "Scrum Alliance", year: "2021" },
  { name: "SAP Activate", issuer: "SAP", year: "2023" },
  { name: "Change Management", issuer: "Prosci", year: "2022" }
];

const languages = [
  { name: "Deutsch", level: "Muttersprache" },
  { name: "Englisch", level: "Verhandlungssicher" },
  { name: "Französisch", level: "Grundkenntnisse" }
];
---

<Layout 
  title="Profil - Monty Ozwirk | LMP Consulting GmbH" 
  description="Profil und Lebenslauf von Monty Ozwirk, Geschäftsführer der LMP Consulting GmbH - IT-Experte mit über 6 Jahren Erfahrung."
>
  <Header />
  <main class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-br from-secondary-50 to-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
            <!-- Profile Image -->
            <div class="lg:col-span-1">
              <div class="relative">
                <div class="w-64 h-64 mx-auto bg-gradient-primary rounded-full flex items-center justify-center shadow-soft-lg">
                  <div class="w-56 h-56 bg-white rounded-full flex items-center justify-center">
                    <svg class="w-32 h-32 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                </div>
                <!-- Decorative elements -->
                <div class="absolute -top-4 -right-4 w-8 h-8 bg-accent rounded-full opacity-80"></div>
                <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-primary rounded-full opacity-60"></div>
              </div>
            </div>

            <!-- Profile Info -->
            <div class="lg:col-span-2">
              <h1 class="heading-1 mb-4">
                <span class="text-gradient">Monty Ozwirk</span>
              </h1>
              <h2 class="text-2xl font-semibold text-secondary-700 mb-6">
                Geschäftsführer & IT Transformation Manager
              </h2>
              <p class="text-large mb-8">
                Mit über 6 Jahren Erfahrung in der IT-Branche spezialisiert auf 
                Projektmanagement, IT-Transformationen und Change Management. 
                Erfolgreich geleitete Projekte mit Budgets bis zu 1 Million Euro 
                in internationalen Umgebungen.
              </p>
              
              <!-- Quick Stats -->
              <div class="grid grid-cols-2 sm:grid-cols-3 gap-6">
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary mb-1">6+</div>
                  <div class="text-sm text-secondary-600">Jahre Erfahrung</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary mb-1">€1M+</div>
                  <div class="text-sm text-secondary-600">Projektbudgets</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary mb-1">15+</div>
                  <div class="text-sm text-secondary-600">Projekte geleitet</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="section">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="heading-2 text-center mb-12">
            Beruflicher <span class="text-gradient">Werdegang</span>
          </h2>

          <div class="relative">
            <!-- Timeline Line -->
            <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-secondary-300"></div>

            <!-- Experience Items -->
            <div class="space-y-12">
              <!-- Current Position -->
              <div class="relative flex items-start">
                <div class="absolute left-6 w-4 h-4 bg-primary rounded-full border-4 border-white shadow-soft"></div>
                <div class="ml-20">
                  <div class="card">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                      <h3 class="heading-3 text-primary">IT Transformation Manager</h3>
                      <span class="text-sm font-semibold text-green-600 bg-green-100 px-3 py-1 rounded-full">
                        Juli 2024 - Juli 2025 (Aktuell)
                      </span>
                    </div>
                    <h4 class="text-lg font-semibold text-secondary-800 mb-3">Mercedes Benz Schweiz</h4>
                    <ul class="space-y-2 text-secondary-700">
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Leitung von IT-Transformationsprojekten mit Fokus auf Sales Applikationen
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        RPA und KI-basierte Optimierungsprojekte konzipiert und umgesetzt
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        SAP Activate und hybride Projektmanagementmethoden angewendet
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        IT-Governance und ISO-Dokumentation mitgestaltet
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Previous Position -->
              <div class="relative flex items-start">
                <div class="absolute left-6 w-4 h-4 bg-secondary-400 rounded-full border-4 border-white shadow-soft"></div>
                <div class="ml-20">
                  <div class="card">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                      <h3 class="heading-3">IT Project Manager</h3>
                      <span class="text-sm font-semibold text-blue-600 bg-blue-100 px-3 py-1 rounded-full">
                        Sept. 2021 - Juni 2024
                      </span>
                    </div>
                    <h4 class="text-lg font-semibold text-secondary-800 mb-3">ITERGO Köln</h4>
                    <ul class="space-y-2 text-secondary-700">
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Parallele IT-Projekte mit Budgets bis zu 1.000.000€ geleitet
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        PRINCE2, Scrum und hybride Methoden erfolgreich angewendet
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Internationale Teams und Change-Prozesse gesteuert
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Education -->
              <div class="relative flex items-start">
                <div class="absolute left-6 w-4 h-4 bg-secondary-400 rounded-full border-4 border-white shadow-soft"></div>
                <div class="ml-20">
                  <div class="card">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                      <h3 class="heading-3">Dualer Student Wirtschaftsinformatik</h3>
                      <span class="text-sm font-semibold text-purple-600 bg-purple-100 px-3 py-1 rounded-full">
                        Aug. 2018 - Aug. 2021
                      </span>
                    </div>
                    <h4 class="text-lg font-semibold text-secondary-800 mb-3">ITERGO Düsseldorf</h4>
                    <ul class="space-y-2 text-secondary-700">
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Umfassende Ausbildung in 6 Abteilungen an 3 Standorten
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Automatisiertes Reporting und RPA-Projekte entwickelt
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-primary mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Python, COBOL, SQL und VBA Kenntnisse erworben
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="section bg-secondary-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <h2 class="heading-2 text-center mb-12">
            Kompetenzen & <span class="text-gradient">Fähigkeiten</span>
          </h2>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Technical Skills -->
            <div class="card">
              <h3 class="heading-3 mb-6 flex items-center">
                <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Technische Kompetenzen
              </h3>
              <div class="space-y-4">
                {skills.filter(skill => skill.category === "Technical").map((skill) => (
                  <div>
                    <div class="flex justify-between mb-2">
                      <span class="font-medium text-secondary-900">{skill.name}</span>
                      <span class="text-sm text-secondary-600">{skill.level}%</span>
                    </div>
                    <div class="w-full bg-secondary-200 rounded-full h-2">
                      <div 
                        class="bg-gradient-to-r from-primary to-primary-600 h-2 rounded-full transition-all duration-1000 ease-out"
                        style={`width: ${skill.level}%`}
                      ></div>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Management Skills -->
            <div class="card">
              <h3 class="heading-3 mb-6 flex items-center">
                <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Management Kompetenzen
              </h3>
              <div class="space-y-4">
                {skills.filter(skill => skill.category === "Management").map((skill) => (
                  <div>
                    <div class="flex justify-between mb-2">
                      <span class="font-medium text-secondary-900">{skill.name}</span>
                      <span class="text-sm text-secondary-600">{skill.level}%</span>
                    </div>
                    <div class="w-full bg-secondary-200 rounded-full h-2">
                      <div 
                        class="bg-gradient-to-r from-accent to-accent-600 h-2 rounded-full transition-all duration-1000 ease-out"
                        style={`width: ${skill.level}%`}
                      ></div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Certifications & Languages -->
    <section class="section">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Certifications -->
            <div>
              <h2 class="heading-2 mb-8">
                <span class="text-gradient">Zertifizierungen</span>
              </h2>
              <div class="space-y-4">
                {certifications.map((cert) => (
                  <div class="card">
                    <div class="flex items-center justify-between">
                      <div>
                        <h3 class="font-semibold text-secondary-900">{cert.name}</h3>
                        <p class="text-secondary-600">{cert.issuer}</p>
                      </div>
                      <div class="text-primary font-semibold">{cert.year}</div>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Languages -->
            <div>
              <h2 class="heading-2 mb-8">
                <span class="text-gradient">Sprachen</span>
              </h2>
              <div class="space-y-4">
                {languages.map((lang) => (
                  <div class="card">
                    <div class="flex items-center justify-between">
                      <h3 class="font-semibold text-secondary-900">{lang.name}</h3>
                      <span class="text-primary font-medium">{lang.level}</span>
                    </div>
                  </div>
                ))}
              </div>

              <!-- Contact CTA -->
              <div class="mt-8 card bg-gradient-primary text-white">
                <h3 class="text-xl font-semibold mb-4">Interesse an einer Zusammenarbeit?</h3>
                <p class="mb-6 text-white/90">
                  Lassen Sie uns über Ihr nächstes IT-Projekt sprechen und gemeinsam 
                  innovative Lösungen entwickeln.
                </p>
                <a href="/kontakt" class="btn bg-white text-primary hover:bg-secondary-100">
                  Kontakt aufnehmen
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />

  <style>
    /* Animate skill bars on scroll */
    @keyframes fillBar {
      from { width: 0%; }
    }
    
    .skill-bar {
      animation: fillBar 2s ease-out;
    }
  </style>

  <script>
    // Animate skill bars when they come into view
    const observerOptions = {
      threshold: 0.5,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const skillBars = entry.target.querySelectorAll('.bg-gradient-to-r');
          skillBars.forEach(bar => {
            bar.classList.add('skill-bar');
          });
        }
      });
    }, observerOptions);

    // Observe skill sections
    const skillSections = document.querySelectorAll('.card');
    skillSections.forEach(section => {
      observer.observe(section);
    });
  </script>
</Layout>