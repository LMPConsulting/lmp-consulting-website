---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard';

const projects = [
  {
    title: "IT Transformation Manager",
    company: "Mercedes Benz Schweiz",
    period: "Juli 2024 - Juli 2025",
    status: "Aktuell",
    description: "Leitung von IT-Transformationsprojekten mit Fokus auf die Einführung neuer Sales Applikationen und Optimierung der Geschäftsprozesse.",
    highlights: [
      "Fahrzeugkonfigurationen, Ordermanagement und Ordertracking",
      "RPA und KI-basierte Optimierungsprojekte",
      "Hybride Projektmanagementmethoden und SAP Activate",
      "KPI-gestütztes Reporting mit globalen Stakeholdern",
      "Change-Management-Methoden",
      "IT-Governance und ISO-Dokumentation"
    ],
    technologies: ["SAP", "RPA", "KI/AI", "Sales Applications"],
    category: "IT Transformation"
  },
  {
    title: "IT Project Manager",
    company: "ITERGO Köln",
    period: "Sept. 2021 - Juni 2024",
    status: "Abgeschlossen",
    description: "Projektleitung für die Digitalisierung von Versicherungsprozessen und Einführung neuer IT-Systeme zur Effizienzsteigerung.",
    highlights: [
      "Digitalisierung von Schadensprozessen",
      "Einführung neuer Versicherungssoftware",
      "Prozessoptimierung und Automatisierung",
      "Stakeholder-Management über mehrere Abteilungen",
      "Compliance und Datenschutz-Integration"
    ],
    technologies: ["Insurance Software", "Process Automation", "GDPR Tools"],
    category: "Projektmanagement"
  },
  {
    title: "Change Management Consultant",
    company: "Deutsche Bank AG",
    period: "März 2020 - August 2021",
    status: "Abgeschlossen",
    description: "Begleitung der digitalen Transformation im Retail Banking mit Fokus auf Mitarbeiterakzeptanz und Prozessoptimierung.",
    highlights: [
      "Digitale Transformation im Retail Banking",
      "Mitarbeiter-Training und -Coaching",
      "Kommunikationsstrategien entwickelt",
      "Widerstandsmanagement und Akzeptanzsteigerung",
      "Kulturwandel-Initiativen"
    ],
    technologies: ["Banking Software", "Training Platforms", "Communication Tools"],
    category: "Change Management"
  },
  {
    title: "SAP Implementation Lead",
    company: "Siemens AG",
    period: "Januar 2019 - Februar 2020",
    status: "Abgeschlossen",
    description: "Leitung der SAP S/4HANA Implementierung für den Geschäftsbereich Digital Industries mit internationalen Teams.",
    highlights: [
      "SAP S/4HANA Migration und Implementierung",
      "Internationale Projektkoordination",
      "Business Process Reengineering",
      "Go-Live Support für 15 Länder",
      "Post-Implementation Optimierung"
    ],
    technologies: ["SAP S/4HANA", "SAP Activate", "Business Intelligence"],
    category: "IT Transformation"
  },
  {
    title: "Digital Transformation Manager",
    company: "Allianz Suisse",
    period: "Juni 2018 - Dezember 2018",
    status: "Abgeschlossen",
    description: "Strategische Beratung und Umsetzung der digitalen Transformation im Versicherungsbereich mit Fokus auf Kundenerfahrung.",
    highlights: [
      "Digitale Kundenreise optimiert",
      "Mobile Apps und Online-Services",
      "Datenanalyse und Customer Insights",
      "Agile Arbeitsweisen eingeführt",
      "Cross-funktionale Teams etabliert"
    ],
    technologies: ["Mobile Development", "Analytics", "CRM Systems"],
    category: "Change Management"
  },
  {
    title: "IT Infrastructure Modernization",
    company: "Swiss Re",
    period: "September 2017 - Mai 2018",
    status: "Abgeschlossen",
    description: "Modernisierung der IT-Infrastruktur und Migration in die Cloud zur Verbesserung der Skalierbarkeit und Sicherheit.",
    highlights: [
      "Cloud Migration Strategy entwickelt",
      "Hybrid Cloud Architektur implementiert",
      "Sicherheitskonzepte überarbeitet",
      "Disaster Recovery Pläne erstellt",
      "Performance-Monitoring etabliert"
    ],
    technologies: ["AWS", "Azure", "Kubernetes", "Security Tools"],
    category: "IT Transformation"
  }
];
---

<Layout 
  title="Projekte & Referenzen - LMP Consulting GmbH" 
  description="Erfolgreiche IT-Projekte und Transformationen - Entdecken Sie unsere Referenzen in verschiedenen Branchen und Technologiebereichen."
>
  <Header />
  <main class="pt-20 lg:pt-24" role="main" id="main-content">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-br from-primary-50 via-white to-accent-50 relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-96 h-96 bg-primary-100 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob"></div>
        <div class="absolute top-40 right-10 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-2000"></div>
        <div class="absolute -bottom-8 left-20 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-xl opacity-30 animate-blob animation-delay-4000"></div>
      </div>

      <div class="container relative z-10">
        <div class="max-w-5xl mx-auto text-center">
          <h1 class="heading-1 mb-8">
            Unsere <span class="text-gradient">Projekte</span>
          </h1>
          <p class="text-large mb-12 max-w-3xl mx-auto">
            Erfolgreiche IT-Projekte und Transformationen unserer Kunden. 
            Entdecken Sie, wie wir Unternehmen bei ihrer digitalen Reise begleitet haben.
          </p>
          
          <!-- Stats -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-16">
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">50+</h3>
              <p class="text-small text-secondary-600">Erfolgreiche Projekte</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">15+</h3>
              <p class="text-small text-secondary-600">Verschiedene Branchen</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">€50M+</h3>
              <p class="text-small text-secondary-600">Projektvolumen</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="heading-4 mb-2">98%</h3>
              <p class="text-small text-secondary-600">Erfolgsrate</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="section-compact bg-surface dark:bg-gray-900" aria-label="Unsere Projekte">
      <div class="container">
        <div class="grid gap-8 grid-cols-[repeat(auto-fit,minmax(320px,1fr))]">
          {projects.map((project, index) => (
            <ProjectCard 
              key={project.title}
              title={project.title}
              company={project.company}
              period={project.period}
              status={project.status}
              description={project.description}
              highlights={project.highlights}
              technologies={project.technologies}
              category={project.category}
              index={index}
              client:load
            />
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-compact bg-gradient-to-br from-primary-600 to-primary-800 text-white">
      <div class="container text-center">
        <h2 class="heading-2 mb-6 text-white">
          Ihr Projekt wartet auf Sie!
        </h2>
        <p class="text-large mb-8 text-white/90 max-w-3xl mx-auto">
          Lassen Sie uns gemeinsam Ihr nächstes erfolgreiches IT-Projekt realisieren. 
          Profitieren Sie von unserer bewährten Expertise und Methodik.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/kontakt" class="btn bg-white text-primary hover:bg-secondary-100 shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Projekt besprechen
          </a>
          <a href="/leistungen" class="btn border-2 border-white text-white hover:bg-white hover:text-primary shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            Unsere Leistungen
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>